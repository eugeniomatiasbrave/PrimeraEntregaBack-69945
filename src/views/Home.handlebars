<!--vista de productos-->
<div>
{{#if products}}
<h1 class="title">Lista de Productos</h1>
<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Descripción</th>
      <th>Código</th>
      <th>Precio</th>
      <th>Status</th>
      <th>Stock</th>
      <th>Categoría</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <td>{{this.title}}</td>
      <td>{{this.description}}</td>
      <td>{{this.code}}</td>
      <td>{{this.price}}</td>
      <td>{{this.status}}</td>
      <td>{{this.stock}}</td>
      <td>{{this.category}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<h1>No hay lista de productos en este momento</h1>
{{/if}}
</div>